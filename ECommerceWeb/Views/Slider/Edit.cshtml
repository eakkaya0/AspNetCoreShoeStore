@model ECommerce.Models.Models.Slider

@{
    ViewData["Title"] = "Slider Düzenle";
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Slider Düzenle</h2>
            <hr />
        </div>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3 row">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3 row">
            <label class="form-label">Mevcut Görsel</label>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="mb-2">
                    <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px; max-height: 200px;" />
                </div>
            }
            <label class="form-label">Yeni Görsel (Değiştirmek için seçin)</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="form-label">Sıra</label>
            <input asp-for="DisplayOrder" type="number" class="form-control" />
        </div>

        <div class="mb-3 form-check row">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Güncelle</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Slider" asp-action="Index" class="btn btn-secondary border form-control">İptal</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
