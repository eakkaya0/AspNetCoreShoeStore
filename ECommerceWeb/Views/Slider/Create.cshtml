@model ECommerce.Models.Models.Slider

@{
    ViewData["Title"] = "Slider Ekle";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Yeni Slider Ekle</h2>
            <hr>
        </div>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        
        <div class="mb-3 row">
            <label asp-for="Title" class="form-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3 row">
            <label asp-for="Description" class="form-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3 row">
            <label class="form-label">Görsel</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="form-label">Sıra</label>
            <input asp-for="DisplayOrder" type="number" class="form-control" />
        </div>

        <div class="mb-3 form-check row">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
        </div>
        
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Kaydet</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Slider" asp-action="Index" class="btn btn-secondary border form-control">İptal</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
