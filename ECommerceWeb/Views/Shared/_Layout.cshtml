<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.7/css/dataTables.dataTables.min.css">
    <!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom"
            data-bs-theme="dark">
            <div class="container-fluid">
                <!-- Her zaman görünür olan linkler -->
                <div class="d-flex align-items-center">
                    <a class="navbar-brand me-3" asp-area="" asp-controller="Home" asp-action="Index">AYAKKABI FURYASI</a>
                    <div class="d-none d-lg-flex me-auto">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="tum-urunler">Tüm Ürünler</a>
                            </li>
                        </ul>
                    </div>
                </div>
                
                <!-- Hamburger menü butonu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Collapsible menü -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    İçerik Yönetimi
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-controller="Category" asp-action="Index">Kategoriler</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li class="nav-item">
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">Kullanıcılar</a>
                                        </li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                    }
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-controller="Product" asp-action="Index">Ürünler</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-controller="Slider" asp-action="Index">Sliderlar</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-controller="AdminOrder" asp-action="Index">Siparişler</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav ms-auto">
                        <!-- Sepet Linki - Herkes görebilir -->
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="ShoppingCart" asp-action="Index">
                                <i class="bi bi-cart3"></i> Sepetim
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count d-none">
                                    0
                                    <span class="visually-hidden">sepet ürün sayısı</span>
                                </span>
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity?.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Orders">
                                            <i class="bi bi-receipt"></i> Siparişlerim
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="javascript:void(0);" onclick="showLogoutConfirm();" data-bs-toggle="modal" data-bs-target="#logoutConfirmModal">
                                            <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <form id="logoutForm" asp-action="Logout" asp-controller="Account" method="post" style="display:none;"></form>

                            <div class="modal fade" id="logoutConfirmModal" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title">Çıkış Yap</h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p class="mb-0">Hesaptan çıkmak istediğinizden emin misiniz?</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                            <button type="button" class="btn btn-danger" onclick="document.getElementById('logoutForm').submit();">
                                                <i class="bi bi-box-arrow-right"></i> Evet, Çıkış Yap
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Natification" />

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-primary text-muted">
        <div class="container text-center">
            Made with <i class="bi bi-heart-fill"></i> by Eakkaya - &copy; 2026
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery-validation/dist/localization/messages_tr.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/2.3.7/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/z50zmcyn4v2ttr1yhir29tctsi7jy7e8rkn4i9nb81b7zx1s/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- Sepet sayısı yükleme script'i -->
    <script>
        $(document).ready(function() {
            loadCartCount();
            setInterval(loadCartCount, 30000);
        });

        function loadCartCount() {
            $.get('/ShoppingCart/GetCartCount')
                .done(function(count) {
                    updateCartCount(count);
                })
                .fail(function() {
                    console.log('Sepet sayısı alınamadı');
                });
        }

        function updateCartCount(count) {
            $('.cart-count').each(function() {
                $(this).text(count);
                if (count > 0) {
                    $(this).removeClass('d-none');
                } else {
                    $(this).addClass('d-none');
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>