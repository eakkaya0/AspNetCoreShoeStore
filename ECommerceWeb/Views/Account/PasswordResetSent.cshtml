@{
    ViewData["Title"] = "Şifre Sıfırlama Bağlantısı Gönderildi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-success">
                <div class="card-body p-5">
                    <!-- Success Icon -->
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    </div>

                    <h2 class="text-center mb-4 text-success">
                        <i class="bi bi-envelope-check"></i> Başarılı!
                    </h2>

                    <!-- Success Message -->
                    @if (TempData["Success"] is string successMessage)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Main Instructions -->
                    <div class="mb-4">
                        <p class="text-center text-muted mb-3">
                            <strong>Lütfen e-posta adresinizi kontrol edin.</strong>
                        </p>
                        <p class="text-muted">
                            Şifre sıfırlama bağlantısı içeren bir e-posta gönderdik. 
                            E-postanızda bulunan bağlantıya tıklayarak şifrenizi sıfırlayabilirsiniz.
                        </p>
                    </div>

                    <!-- Development Reset Link (Hidden in Production) -->
                    @if (TempData["ResetLink"] is string resetLink)
                    {
                        <div class="alert alert-info mb-4">
                            <h6 class="alert-heading">
                                <i class="bi bi-info-circle"></i> Geliştirme Amaçlı Test Bağlantısı
                            </h6>
                            <p class="small mb-2">
                                <strong>Not:</strong> Bu bağlantı sadece geliştirme / test ortamında gösterilmektedir.
                                Gerçek uygulamada sadece e-postada gösterilir.
                            </p>
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" value="@resetLink" 
                                       id="resetLinkInput" readonly>
                                <button class="btn btn-outline-info btn-sm" type="button" 
                                        onclick="copyToClipboard('resetLinkInput')">
                                    <i class="bi bi-clipboard"></i> Kopyala
                                </button>
                            </div>
                            <p class="small text-muted mt-2 mb-0">
                                <strong>Ya da doğrudan tıklayın:</strong>
                                <a href="@resetLink" class="btn btn-sm btn-info mt-2">
                                    <i class="bi bi-link-45deg"></i> Şifre Sıfırlama Sayfasına Git
                                </a>
                            </p>
                        </div>
                    }
                    @if (TempData["ResetLink"] is string resetLink2)
                    {
                        <div class="alert alert-info mb-4">
                            <h6 class="alert-heading">
                                <i class="bi bi-info-circle"></i> Geliştirme Amaçlı Test Bağlantısı
                            </h6>
                            <p class="small mb-2">
                                <strong>Not:</strong> Bu bağlantı sadece geliştirme / test ortamında gösterilmektedir.
                                Gerçek uygulamada sadece e-postada gösterilir.
                            </p>
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" value="@resetLink2" 
                                       id="resetLinkInput" readonly>
                                <button class="btn btn-outline-info btn-sm" type="button" 
                                        onclick="copyToClipboard('resetLinkInput')">
                                    <i class="bi bi-clipboard"></i> Kopyala
                                </button>
                            </div>
                            <p class="small text-muted mt-2 mb-0">
                                <strong>Ya da doğrudan tıklayın:</strong>
                                <a href="@resetLink2" class="btn btn-sm btn-info mt-2">
                                    <i class="bi bi-link-45deg"></i> Şifre Sıfırlama Sayfasına Git
                                </a>
                            </p>
                        </div>
                    }

                    <!-- Troubleshooting -->
                    <div class="card bg-light mb-4">
                        <div class="card-body p-3">
                            <h6 class="card-title">
                                <i class="bi bi-question-circle"></i> E-posta Alınmadı mı?
                            </h6>
                            <ul class="small mb-0">
                                <li>Spam / Junk klasörünü kontrol edin</li>
                                <li>E-posta adresinin doğru olduğundan emin olun</li>
                                <li>
                                    <a asp-action="ForgotPassword" class="text-primary">
                                        Tekrar deneyin
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Navigation -->
                    <div class="text-center">
                        <p class="mb-2">
                            <a asp-action="Login" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Giriş Sayfasına Dön
                            </a>
                        </p>
                        <p class="text-muted small">
                            Hesabınız yok mu?
                            <a asp-action="Register" class="text-primary">Kayıt Ol</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyToClipboard(elementId) {
        const element = document.getElementById(elementId);
        element.select();
        document.execCommand('copy');
        
        const btn = event.target.closest('button');
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="bi bi-check"></i> Kopyalandı!';
        
        setTimeout(() => {
            btn.innerHTML = originalText;
        }, 2000);
    }
</script>
