@model ECommerce.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                    </h2>

                    @if (ViewData["ReturnUrl"] != null)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> Bu işlemi gerçekleştirmek için giriş yapmanız gerekiyor.
                        </div>
                    }

                    <form method="post" asp-action="Login">
                        <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i> E-posta
                            </label>
                            <input type="email" asp-for="Email" class="form-control" 
                                   placeholder="ornek@email.com" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-shield-lock"></i> Şifre
                            </label>
                            <input type="password" asp-for="Password" class="form-control" 
                                   placeholder="Şifrenizi girin" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check d-flex justify-content-between align-items-center">
                            <div>
                                <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="text-primary text-decoration-none small">
                                Şifremi Unuttum?
                            </a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted">Hesabınız yok mu?</p>
                        <a asp-action="Register" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus"></i> Kayıt Ol
                        </a>
                    </div>

                    <div asp-validation-summary="All" class="text-danger mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

