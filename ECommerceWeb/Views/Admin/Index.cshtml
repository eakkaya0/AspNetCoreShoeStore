@model AdminDashboardVM

@{
    ViewData["Title"] = "Admin Paneli - Kullanıcı Yönetimi";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                <i class="bi bi-shield-lock"></i> Admin Paneli
            </h2>
            <p class="text-muted">Sisteme kayıtlı tüm kullanıcıları yönetin</p>
        </div>
    </div>

    @if (Model.UserListViewModels.Count == 0)
    {
        <div class="alert alert-info">
            Sistemde kayıtlı kullanıcı bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-people"></i> Kullanıcı Listesi
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="usersTable">
                        <thead class="table-light">
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>E-posta</th>
                                <th>Ad Soyad</th>
                                <th>Roller</th>
                                <th>E-posta Doğrulama</th>
                                <th>Katılma Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.UserListViewModels)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-person"></i>
                                        <strong>@user.UserName</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>
                                        @if (user.Roles.Any())
                                        {
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="badge bg-info">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Rol atanmamış</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Doğrulı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-exclamation-circle"></i> Beklemede
                                            </span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a asp-action="UserDetail" asp-route-userId="@user.Id" 
                                           class="btn btn-sm btn-primary" title="Detay">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.21/i18n/Turkish.json'
                },
                paging: true,
                pageLength: 10,
                ordering: true,
                searching: true
            });
        });
    </script>
}
